{
	"name": "John P. Bloch's composer repo",
	"homepage": "http://composer.johnpbloch.com",
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "wordpress/i18n-tools",
				"version": "dev-trunk",
				"source": {
					"url": "http://develop.svn.wordpress.org/",
					"type": "svn",
					"reference": "trunk/"
				},
				"bin": ["tools/i18n/makepot.php"]
			}
		},
		{
			"type": "vcs",
			"url": "https://github.com/johnpbloch/wp-wrapper.git"
		}
	],
	"require-all": true,
	"archive": {
		"directory": "dist",
		"format": "zip",
		"skip-dev": true
	}
}
